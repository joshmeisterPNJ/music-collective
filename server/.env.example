# Server config
PORT=3001

# Postgres URL (replace user:pass@host:port/db)
DATABASE_URL=postgresql://postgres:password@localhost:5432/music_collective_dev

# JWT secret (any random string)
JWT_SECRET=your_jwt_secret_here

# SMTP (for nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false     # true if using SSL
SMTP_USER=username
SMTP_PASS=password

# Cloudflare R2 (set in staging/production only)
USE_LOCAL_UPLOADS=false
R2_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
R2_BUCKET=tisse-collectif-stage
R2_KEY=your_r2_key_here
R2_SECRET=your_r2_secret_here
